<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="viesturs" context="main">
        <createSequence sequenceName="client_issue_seq" />
    </changeSet>

    <changeSet id="2" author="viesturs" context="main">
        <createTable tableName="client_issue_junction">
            <column name="client_id" type="BIGINT" autoIncrement="false">
                <constraints primaryKey="false" nullable="false"/>
            </column>

            <column name="issue_id" type="BIGINT" autoIncrement="false">
                <constraints primaryKey="false" nullable="false"/>
            </column>


        </createTable>
    </changeSet>

</databaseChangeLog>